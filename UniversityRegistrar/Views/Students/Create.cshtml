@{
  Layout = "_Layout";
}
<h1>Add New Student</h1>
<hr/>

@model UniversityRegistrar.Models.Student;

<div class="container">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    <br/>
    @Html.TextBoxFor(model => model.Name, new { required="required" })
    <br/>
    @Html.LabelFor(model => model.EnrollmentDate)
    <br/>
    @Html.TextBoxFor(model => model.EnrollmentDate, new { type="date", required="required" })
    <br/>
    <br/>
    <input type="submit" value="Submit" class="btn btn-primary"/>
  }
</div>

<br/>

<h5>@Html.ActionLink("Back to Students", "Index")</h5>