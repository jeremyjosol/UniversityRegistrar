@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course;

<h2>Are you sure you want to delete this Course?</h2>
<h4>@Html.DisplayNameFor(model => model.CourseName): @Html.DisplayFor(model => model.CourseName)</h4> 
@using (Html.BeginForm())
{
  <input type="submit" value="X" class="btn btn-outline-danger btn-sm" />
}
<div class="container">
  <h5>@Html.ActionLink("Back to Course", "Details", new { id = Model.CourseId })</h5>
</div>