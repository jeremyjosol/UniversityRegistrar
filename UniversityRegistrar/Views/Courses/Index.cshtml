@{
  Layout = "_Layout";
}

<h1>Courses</h1>
<hr />

@using UniversityRegistrar.Models;

@if(Model.Count == 0)
{
  <p>There are currently no courses available!</p>
}
<div class="container">
  <ul>
    @foreach (Course course in Model)
    {
      @using (Html.BeginForm("Delete", "Courses"))
      {
        <li>
          <h4>
            @Html.ActionLink(@course.CourseName, "Details", new { id = course.CourseId })
            @Html.Hidden("id", @course.CourseId)
            <input type="submit" value="X" class="btn btn-x btn-sm btn-outline-danger" />
          </h4>
        </li>
      }
    }
  </ul>
</div>

<div class="container">
  <h5>@Html.ActionLink("Add New Course", "Create")</h5>
  <h5>@Html.ActionLink("Home", "Index", "Home")</h5>
</div>