@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course;
@using UniversityRegistrar.Models;
@using System.Collections.Generic;

<h1>Course Details</h1>
<hr />
<h3>@Html.DisplayNameFor(model => model.CourseName): @Html.DisplayFor(model => model.CourseName)</h3>
<h3>@Html.DisplayNameFor(model => model.CourseNumber): @Html.DisplayFor(model => model.CourseNumber)</h3>
<h3>@Html.DisplayNameFor(model => model.Department.Name): @Html.DisplayFor(model => model.Department.Name)</h3>
<hr />

@if (Model.JoinEntities.Count == 0)
{
  <p>There are currently no students enrolled.</p>
}
else
{
  <h4>Enrolled Students</h4>
  <hr />
  @foreach(Enrollment join in Model.JoinEntities)
  {
    
    <li>@Html.ActionLink(join.Student.Name, "Details", "Students", new { id = join.Student.StudentId })</li>
  }
}
<br/>
<div class="container">
  <h5>@Html.ActionLink("Add a Student", "AddStudent", new { id = Model.CourseId })</h5>
  <h5>@Html.ActionLink("Remove Course", "Delete", new { id = Model.CourseId })</h5>
  <h5>@Html.ActionLink("Back to Courses", "Index")</h5>
</div>