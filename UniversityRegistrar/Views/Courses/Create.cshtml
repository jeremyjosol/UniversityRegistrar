@{
  Layout = "_Layout";
}
<h1>Add New Course</h1>
<hr/>
@model UniversityRegistrar.Models.Course

<div class="container">
  @using (Html.BeginForm())
  {
    <h4>Course Name</h4>
    @Html.TextBoxFor(model => model.CourseName)
    @Html.ValidationMessageFor(model => model.CourseName, "", new { @class = "text-danger" })
    <br/>
    <h4>Course Number</h4>
    @Html.TextBoxFor(model => model.CourseNumber)
    @Html.ValidationMessageFor(model => model.CourseNumber, "", new { @class = "text-danger" })
    <br/>
    <h4>@Html.Label("Choose a Department")</h4>
    @Html.DropDownList("DepartmentId")
    <br/>
    @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" } )
    <br/>
    <input type="submit" value="Add new Course" class="btn btn-primary" />
  }
</div>
  <br/>
<div class="container">
  <h5>@Html.ActionLink("Back to Courses", "Index")</h5>
</div>