@{
  Layout = "_Layout";
}

<h1>Departments</h1>
<hr />

@using UniversityRegistrar.Models;

@if(Model.Count == 0)
{
  <p>There are currently no Departments on record.</p>
}
<div class="container">
  <ul>
    @foreach (Department department in Model)
    {
      <li><h4>@Html.ActionLink(@department.Name, "Details", new { id = department.DepartmentId })</h4></li>
    }
  </ul>
</div>

<div class="container">
  <h5>@Html.ActionLink("Add New Department", "Create")</h5>
  <h5>@Html.ActionLink("Home", "Index", "Home")</h5>
</div>