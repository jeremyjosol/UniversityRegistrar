@{
  Layout = "_Layout";
}

<h2>Departments</h2>
<hr />

@using UniversityRegistrar.Models;

@if(Model.Count == 0)
{
  <p>There are currently no Departments on record.</p>
}
<ul>
  @foreach (Department department in Model)
  {
    <li>@Html.ActionLink(@department.Name, "Details", new { id = department.DepartmentId })</li>
  }
</ul>

<p>@Html.ActionLink("Add New Department", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>